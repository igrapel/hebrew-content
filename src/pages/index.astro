---
// src/pages/index.astro
const booklets = [
  {
    id: "1",
    title: "Jewish Months Poster",
    image: "/images/heb_poster.jpeg",
    page: "jewish-calendar"
  },
  {
    id: "2",
    title: "Hebrew - Level 2",
    image: "/images/humash.jpg",
    page: "hebrew-level-2"
  },
];
---

<html lang="en">
  <head>
    <title>Hebrew Booklets</title>
    
    <!-- Font Optimization -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap" rel="stylesheet" />

    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
      }

      body {
        padding-top: 3rem;
        height: 100vh;
        box-sizing: border-box;
        font-family: 'JetBrains Mono', monospace;
        background: #050b39;
        color: aliceblue;
      }

      .top-left-link {
        position: absolute;
        top: 1rem;
        left: 1rem;
        font-size: 0.7em;
      }

      .top-left-link a {
        color: white;
        background-color: #0070f3;
        text-decoration: none;
        font-weight: bold;
        padding: 0.4rem 0.8rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: inline-block;
        font-size: 1.5em;
        margin-bottom: 0.5rem;
      }

      .top-left-link a:hover {
        background-color: #005bb5;
        text-decoration: none;
      }

      .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #0070f3;
        padding-bottom: 0.5rem;
        letter-spacing: 1px;
        text-transform: uppercase;
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 2rem 0;
        display: flex;
        flex-direction: row;
        gap: 7rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      li {
        margin-bottom: 0;
        text-align: center;
        max-width: 220px;
      }

      h2 {
        font-size: 1.1em;
        white-space: nowrap;
        margin-bottom: 0.7em;
      }

      img {
        border: 1px solid #ccc;
        border-radius: 8px;
        width: 200px;
        height: 300px;
        object-fit: cover;
      }

      a {
        text-decoration: none;
        color: #0070f3;
        font-weight: bold;
      }

      a:hover {
        text-decoration: underline;
      }

      p a {
        color: aquamarine;
      }
    </style>
  </head>

  <body>
    <div class="top-left-link">
      <a href="/about">About Us</a><br />
      <a href="/shipping">Shipping & Handling Policy</a>
    </div>

    <main class="content">
      <h1>Hebrew Booklets for Sale!</h1>
      <ul>
        {booklets.map((booklet) => (
          <li>
            <h2>{booklet.title}</h2>
            <img
              src={booklet.image}
              alt={booklet.title}
              width="200"
              height="300"
              loading="lazy"
            />
            <p><a href={`/product/${booklet.page}`}>Buy Now</a></p>
          </li>
        ))}
      </ul>
    </main>
  </body>
</html>
