---
// src/pages/index.astro
const booklets = [
  {
    id: "1",
    title: "Jewish Months Poster",
    image: "/images/heb_poster.jpeg",
    page: "jewish-calendar" // new slug matching the product filename
  },
  {
    id: "2",
    title: "Hebrew - Level 2",
    image: "/images/humash.jpg",
    page: "hebrew-level-2"
  },
];
---

<html>
  <head>
    <title>Hebrew Booklets</title>
	<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap" rel="stylesheet">

    <style>
      body, html {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      body {
		/* Add some space from the top */
  		padding-top: 3rem; /* or try 5rem or more */
  		height: 100vh; /* ensure body fills viewport height */
  		box-sizing: border-box; /* include padding in height */

      /*
      display: flex;
      justify-content: center; 
      align-items: center;    
      flex-direction: column; 
      */
      /* stack children vertically */
      font-family: 'Montserrat', 'JetBrains Mono', monospace;
  
      background: #050b39;
		  color:aliceblue
      }
      ul {
        list-style: none;
        padding: 0;
        margin: 2rem 0;
        display: flex;
        flex-direction: row;
        gap: 7rem; /* adds spacing between booklets */
        justify-content: center;
        flex-wrap: wrap;
      }
      li {
      margin-bottom: 0; /* remove vertical spacing since they're now in a row */
      text-align: center;
      max-width: 220px;
}
      img {
        border: 1px solid #ccc;
        border-radius: 8px;
      }
      a {
        text-decoration: none;
        color: #0070f3;
        font-weight: bold;
      }
      a:hover {
        text-decoration: underline;
      }

	  .top-left-link {
  	position: absolute;
  	top: 1rem;
  	left: 1rem;
    font-size: .7em; /* Adjust font size for smaller text */
	}

.top-left-link a {
  color: white;
  background-color: #0070f3; /* blue background */
  text-decoration: none;
  font-weight: bold;
  padding: 0.4rem 0.8rem;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  display: inline-block;
  font-size: 1.5em;
  margin-bottom: 0.5rem; /* ðŸ‘ˆ Adds space between the buttons */
}

.top-left-link a:hover {
  background-color: #005bb5;
  text-decoration: none;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
 
}

h1 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  margin-bottom: 1.5rem;
  border-bottom: 2px solid #0070f3;
  padding-bottom: 0.5rem;
  letter-spacing: 1px;
  text-transform: uppercase;
}

p a{
  color: aquamarine;
}

  </style>
  </head>
  <body>
	<div class="top-left-link">
  		<a href="/about">About Us</a>
		<br>
		<a href="/shipping">Shipping & Handling Policy</a>
	</div>

<main class="content">
  <h1 style="text-align: center; width: 100%; margin-bottom: 0;">Hebrew Booklets for Sale</h1>
  <ul>
  {booklets.map(booklet => (
    <li>
      <h2 style="font-size: 1.1em; white-space: nowrap; margin-bottom: 0.7em;">
        {booklet.title}
      </h2>
      <img src={booklet.image} alt={booklet.title} width="200" />
      <p><a href={`/product/${booklet.page}`}>Buy Now</a></p>
    </li>
  ))}
</ul>
</main>
</main>
  </body>
</html>